# scope http
# allows file uploads up to 20 megabytes
client_max_body_size 100M;

## For the filefield_nginx_progress module to work. From the
## README. Reserve 1MB under the name 'uploads' to track uploads.
upload_progress uploads 1m;

# security
server_tokens off;
limit_req_zone $binary_remote_addr zone=phpip:10m rate=3r/s;
limit_req_zone $server_name zone=phpserver:10m rate=24r/s;

# type
types {
  # fonts
  application/vnd.ms-fontobject eot;
  application/x-font-ttf ttf;
  font/opentype ott;
  font/x-woff2 woff2;

  # text
  text/csv csv;
  text/x-markdown md;
}
gzip_types text/plain text/css application/x-javascript application/javascript text/javascript ext/xml application/xml application/xml+rss application/json text/csv application/x-font-ttf font/opentype;

# scope server
server {
  listen 80 default_server;
  server_name  _;
  root /var/www/sites-unavailable;
  error_page 404 /404.html;
  error_page 500 502 503 504 /404.html;

  location ~ ^/live/.*\.(htm|html)$ {
    try_files $uri @live 404;
  }
  location @live {
    return 200 "live";
  }
  location /404.html {
    internal;
  }
  location /image {
    try_files $uri /$uri 404;
  }
  location / {
    internal;
  }
}
server {
  listen 443 ssl http2 default_server;
  server_name _;
  ssl_certificate      ssl/peopo.org/peopo.org.crt;
  ssl_certificate_key  ssl/peopo.org/peopo.org.key;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers 'kEECDH+ECDSA+AES128 kEECDH+ECDSA+AES256 kEECDH+AES128 kEECDH+AES256 kEDH+AES128 kEDH+AES256 DES-CBC3-SHA +SHA !aNULL !eNULL !LOW !kECDH !DSS !MD5 !EXP !PSK !SRP !CAMELLIA !SEED';

  root /var/www/sites-unavailable;
  error_page 404 /404.html;
  error_page 500 502 503 504 /404.html;

  location ~ ^/live/.*\.(htm|html)$ {
    try_files $uri @live 404;
  }
  location @live {
    return 200 "live";
  }
  location /404.html {
    internal;
  }
  location /image {
    try_files $uri /$uri 404;
  }
  location / {
    internal;
  }
}
